<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true">

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="45"
                android:endColor="@color/congress_blue_light"
                android:centerColor="@color/congress_blue_dark"
                android:startColor="@color/regal_blue"
                android:type="linear" />
            <corners android:radius="0dp"/>
        </shape>
    </item>

    <item android:gravity="center_horizontal">
        <bitmap android:src="@drawable/digicolle_logo"
            android:gravity="center_horizontal"/>
    </item>

</layer-list>