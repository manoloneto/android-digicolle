<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.hillstech.digicollection">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.digiDex.DigiDexActivity"></activity>
        <activity
            android:name=".activities.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.digiBank.DigiBankActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.scanList.ScanListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.RadarActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LobbyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.StoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.CreateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.LocationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.battleResult.BattleResultActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.digiviceList.DigiviceListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.evolutionList.EvolutionListActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>